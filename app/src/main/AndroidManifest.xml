<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.julia.traveleasily">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TourPage"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".AddNewTour"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="AddItem" />
                <action android:name="EditItem" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".budgetPage" />
        <activity
            android:name=".AddBudget"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="AddBudget" />
                <action android:name="EditBudget" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".placesPage" />
        <activity android:name=".IndexPage" />
        <activity android:name=".AddPlace"></activity>
    </application>

</manifest>
